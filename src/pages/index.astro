---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import InputFactors from '../components/InputFactors.svelte'
import InputUnitReal from '../components/InputUnitReal.svelte'
import InputUnitScaled from '../components/InputUnitScaled.svelte'
---
<Layout title='Scalimeter'>
    <Header/>
    <main class='box flex flex-col items-center gap-8 rounded-xl p-10 bg-white/50 dark:bg-slate-400/50'>
        <div class='flex flex-row gap-2 items-center w-full'>
            <span>Escale</span>
            <InputFactors client:load/>
        </div>
        <InputUnitReal client:load/>
        <InputUnitScaled client:load/>
    </main>
	<Footer />
</Layout>
