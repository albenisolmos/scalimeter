---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import InputFactors from '../components/InputFactors.svelte'
import InputUnitReal from '../components/InputUnitReal.svelte'
import InputUnitScaled from '../components/InputUnitScaled.svelte'
---

<Layout
	title="Scalimeter"
	description="Web page for calculate the actual length and the scale length according to the scale ratio"
>
	<main
		class="box flex flex-col gap-5 rounded-xl bg-white/50 p-10 shadow-sm md:text-red-500 dark:border-gray-700 dark:bg-gray-800 dark:shadow-black/50"
	>
		<div class="flex w-full flex-row items-center gap-2">
			<span class="font-medium">Escale</span>
			<InputFactors client:load />
		</div>
		<InputUnitReal client:load />
		<InputUnitScaled client:load />
	</main>
</Layout>
